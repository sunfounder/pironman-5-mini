#!/bin/bash

# Pass all arguments to the pironman-mini script
background=false
args=()
for arg in "$@"; do
    if [ "$arg" == "--background" ]; then
        background=true
    else
        args+=("$arg")
    fi
done

if [ $background == true ]; then
    echo "running at background"
    /opt/pironman-mini/venv/bin/pironman-mini-service "$args" 2>1 1>/dev/null &
else
    /opt/pironman-mini/venv/bin/pironman-mini-service "$@"
fi

